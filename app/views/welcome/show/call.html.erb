<% title = t("meta.title.welcome.show") %>
<% set_meta_tags(title:, reverse: false) %>

<%= render ::Layouts::BasicLayoutComponent.new do %>
  <%= render Containers::BasicContainerComponent.new do %>
    <h1 class="inline-block rounded-full bg-primary px-3 py-1 font-bold">
      Mewst
    </h1>

    <div class="mt-3">
      <%= t("messages.welcome.beta_html") %>
    </div>

    <hr class="my-6">

    <div>
      <p>
        <%= t("messages.welcome.description_1_html") %>
      </p>

      <p class="mt-4">
        <%= t("messages.welcome.description_2_html") %>
      </p>
    </div>

    <hr class="my-6">

    <h2 class="text-xl font-semibold antialiased">
      <%= t("nouns.features_of_mewst") %>
    </h2>

    <div class="mt-4 grid grid-cols-1 gap-4 md:grid-cols-2">
      <% [1, 2, 3, 4].each do |i| %>
        <div>
          <h3 class="font-semibold antialiased">
            <%= t("messages.welcome.feature_#{i}.title") %>
          </h3>

          <div class="mt-1 text-sm text-gray-500">
            <%= t("messages.welcome.feature_#{i}.body") %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
