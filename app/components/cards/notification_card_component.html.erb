<%= render Mewst::UI::Card.new do %>
  <%= render Mewst::UI::Card::Body.new do %>
    <% case notification.deserialized_notifiable_type %>
    <% when NotifiableType::Stamp %>
      <%= render Cards::NotificationCard::StampNotificationComponent.new(notification:) %>
    <% end %>

    <hr class="mt-4">

    <%= render Cards::ProfileCardComponent.new(profile: source_profile) do |component| %>
      <% component.with_actions_menu do %>
        <%= render Buttons::FollowButtonComponent.new(target_profile: source_profile, follow_checker:, class_name: "w-full") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
