<% title = t("meta.title.home.show") %>
<% set_meta_tags(title:) %>

<%= render Navbars::NavbarComponent.new %>

<div class="py-3">
  <div class="container u-flat u-narrow">
    <%= render Forms::PostFormComponent.new %>

    <hr>

    <%# render Navs::TimelineNavComponent.new %>

    <div
      class="gap-3 js-timeline mt-4 vstack"
      data-controller="timeline"
    >
      <% @posts.each do |post| %>
        <%= render Cards::PostCardComponent.new(post:) %>
      <% end %>
    </div>

    <div class="mt-3">
      <%= render Paginations::CursorPaginationComponent.new(
        prev_path: home_path(before: @page_info.start_cursor),
        next_path: home_path(after: @page_info.end_cursor),
        page_info: @page_info
      ) %>
    </div>
  </div>
</div>
