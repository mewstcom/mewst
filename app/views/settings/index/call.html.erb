<% title = t("meta.title.settings.index") %>
<% set_meta_tags(title:) %>

<%= render ::Layouts::BasicLayoutComponent.new do %>
  <%= render Containers::BasicContainerComponent.new do %>
    <h1 class="text-2xl font-semibold antialiased">
      <%= title %>
    </h1>

    <hr class="my-4">

    <%= render Mewst::UI::Card.new do %>
      <%= render Mewst::UI::Card::Body.new do %>
        <ul class="menu rounded-box bg-neutral-200">
          <li>
            <%= link_to settings_profile_path, class: "flex justify-between" do %>
              <%= t("meta.title.settings.profiles.show") %>

              <%= render Mewst::UI::Icon.new(name: "right_fill") %>
            <% end %>
          </li>

          <li>
            <%= link_to settings_user_path, class: "flex justify-between" do %>
              <%= t("meta.title.settings.users.show") %>

              <%= render Mewst::UI::Icon.new(name: "right_fill") %>
            <% end %>
          </li>

          <li>
            <%= link_to settings_email_path, class: "flex justify-between" do %>
              <%= t("meta.title.settings.emails.show") %>

              <%= render Mewst::UI::Icon.new(name: "right_fill") %>
            <% end %>
          </li>
        </ul>

        <div class="mt-3 text-center">
          <%= button_to t("nouns.sign_out"), sign_out_path, class: "btn btn-link no-animation text-info", method: :delete %>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>
