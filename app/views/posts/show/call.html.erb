<% title = t("meta.title.posts.show", atname: @profile.atname, name: @profile.name, content: @post.content) %>
<% set_meta_tags(title: title.truncate(60)) %>

<%= render ::Layouts::BasicLayoutComponent.new do %>
  <%= render Containers::BasicContainerComponent.new do %>
    <div class="flex flex-col gap-4">
      <%= render Cards::DetailedPostCardComponent.new(post: @post, stamp_checker: @stamp_checker) %>

      <div class="flex flex-row gap-2 items-center justify-between">
        <div class="basis-1/2 w-1/2">
          <% if @post.prev_post %>
            <%= render Links::PostNavLinkComponent.new(
              post: @post.prev_post,
              direction: Links::PostNavLinkComponent::Direction::Prev
            ) %>
          <% end %>
        </div>

        <div class="basis-1/2 w-1/2">
          <% if @post.next_post %>
            <%= render Links::PostNavLinkComponent.new(
              post: @post.next_post,
              direction: Links::PostNavLinkComponent::Direction::Next
            ) %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
