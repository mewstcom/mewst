<div>
  <p>
    <%= link_to "@#{target_post.profile.atname}", profile_path(target_post.profile.atname), class: "font-bold text-gray-700" %>
    <%= t("messages.components.notification_card.stamped") %>
  </p>

  <div class="mt-1 text-gray-500 text-sm">
    <%= mst_time_ago_in_words(notification.notified_at) %>
  </div>

  <div class="mt-3">
    <%= link_to profile_post_path(target_post.profile.atname, target_post.id) do %>
      <blockquote class="antialiased border-gray-500 border-l-2 break-words px-4 text-gray-500">
        <%= target_post.content %>
      </blockquote>
    <% end %>
  </div>
</div>
