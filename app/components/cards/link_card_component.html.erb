<div class="flex rounded-lg border border-gray-300 p-2">
  <div class="flex w-full flex-col gap-2">
    <% if link.image_url.present? %>
      <%= image_tag(link.image_url, {
        class: "aspect-video max-h-[300px] object-contain w-full",
        loading: "lazy",
        size: "16x9",
      }) %>
    <% end %>

    <div class="flex flex-col gap-1">
      <div class="text-sm text-gray-500">
        <%= link.domain %>
      </div>

      <div class="font-bold">
        <%= link.title %>
      </div>
    </div>
  </div>
</div>
