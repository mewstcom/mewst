<%= render Dropdowns::Base::DropdownComponent.new(class_name: "dropdown-bottom dropdown-end") do %>
  <%= render Dropdowns::Base::DropdownButtonComponent.new(class_name: "btn btn-circle btn-ghost btn-sm hover:bg-gray-100") do %>
    <i class="bi bi-three-dots fw-bold text-muted"></i>
  <% end %>
  <%= render Dropdowns::Base::DropdownListComponent.new(class_name: "bg-neutral-100 p-1 rounded-box shadow w-52 z-[1]") do %>
    <%= render Dropdowns::Base::DropdownItemComponent.new do %>
      <%= link_to t("nouns.rss_feed"), profile_atom_path(atname: profile.atname), target: "_blank" %>
    <% end %>
  <% end %>
<% end %>
