<div
  aria-atomic="true"
  class="duration-150 ease-in-out hidden me-auto ms-auto transition"
  data-controller="flash-toast"
  data-flash-toast-type-value="<%= flash_toast_type %>"
  data-flash-toast-message-html-value="<%= flash[flash_toast_type] %>"
  id="flash-toast"
>
  <div
    class="alert flex justify-between p-2"
    data-flash-toast-target="alert"
  >
    <div class="flex items-center toast-body">
      <span
        class="me-3 text-3xl"
        data-flash-toast-target="icon"
      ></span>

      <span
        class="grow"
        data-flash-toast-target="message"
      ></span>
    </div>

    <button
      aria-label="Close"
      data-action="flash-toast#hideFlashToast"
      type="button"
    >
      <i class="bi bi-x-lg"></i>
    </button>
  </div>
</div>
