<% title = t("meta.title.password_resets.new") %>
<% set_meta_tags(title:) %>

<%= render ::Layouts::SimpleLayoutComponent.new do %>
  <div class="container max-w-3xl mx-auto">
    <div class="text-center">
      <div class="mt-12">
        <%= link_to root_path, class: "inline-block" do %>
          <%= render Icons::LogoIconComponent.new %>
        <% end %>
      </div>

      <h1 class="font-bold mt-8 text-3xl">
        <%= title %>
      </h1>

      <p class="mt-4">
        <%= t("messages.password_reset.enter_your_email_html") %>
      </p>
    </div>

    <div class="bg-base-300 card mt-8">
      <div class="card-body">
        <%= form_with model: @form, url: password_reset_path do |f| %>
          <%= render Cards::FormErrorsCardComponent.new(errors: f.object.errors) %>

          <%= f.label :email, class: "form-control" do %>
            <div class="label">
              <span class="label-text">
                <%= t("forms.attributes.email_confirmation_form.email") %>
              </span>
            </div>

            <%= f.email_field :email, autocomplete: "username", autofocus: true, class: "input input-bordered w-full" %>
          <% end %>

          <div class="mt-8 text-center">
            <%= f.button class: "btn btn-primary rounded-full", type: :submit do %>
              <%= t("verbs.submit") %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
