<%# https://github.com/ddnexus/pagy/blob/7dffef5e5b7b5b86db94cf7afbf2960fe30775bc/lib/templates/bootstrap_nav.html.erb %>

<% link = pagy_link_proc(@pagy, link_extra: 'class="page-link"') %>

<nav class="pagy-bootstrap-nav" role="navigation">
  <ul class="justify-content-center pagination">
    <% if @pagy.prev %>
      <li class="page-item prev">
        <%== link.call(@pagy.prev, t("messages.pagination.prev_html"), 'aria-label="previous"') %>
      </li>
    <% else %>
      <li class="page-item prev disabled">
        <a href="#" class="page-link">
          <%= t("messages.pagination.prev_html") %>
        </a>
      </li>
    <% end %>

    <% @pagy.series.each do |item| # series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36] %>
      <% if item.is_a?(Integer) %>
        <li class="page-item">
          <%== link.call(item) %>
        </li>
      <% elsif item.is_a?(String) %>
        <li class="page-item active">
          <%== link.call(item) %>
        </li>
      <% elsif item == :gap %>
        <li class="page-item disabled gap">
          <a href="#" class="page-link">
            <%== pagy_t("pagy.nav.gap") %>
          </a>
        </li>
      <% end %>
    <% end %>

    <% if @pagy.next %>
      <li class="page-item next">
        <%== link.call(@pagy.next, t("messages.pagination.next_html"), 'aria-label="next"') %>
      </li>
    <% else %>
      <li class="page-item next disabled">
        <a href="#" class="page-link">
          <%= t("messages.pagination.next_html") %>
        </a>
      </li>
    <% end %>
  </ul>
</nav>
