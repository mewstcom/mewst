<%= render Navbars::NavbarComponent.new %>

<div class="mt-3 container-fluid">
  <div class="gx-3 row">
    <div class="col-2">
    </div>

    <div class="col-5">
      <%= render Forms::PostFormComponent.new %>
    </div>

    <div class="col-5">
    </div>
  </div>

  <div class="gx-3 row">
    <div class="col-2">
    </div>

    <div class="col-5">
      <div
        class="c-timeline gap-3 pt-3 vstack"
        data-controller="timeline"
      >
        <% @posts.each do |post| %>
          <%= render Cards::PostCardComponent.new(post:) %>
        <% end %>
      </div>
    </div>

    <div class="col-5">
      <div
        class="c-sticky-post position-sticky pt-3"
        data-controller="sticky-post"
      >
        <turbo-frame
          data-sticky-post-target="frame"
        ></turbo-frame>
      </div>
    </div>
  </div>
</div>
