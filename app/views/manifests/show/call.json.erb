<%# https://developer.mozilla.org/ja/docs/Web/Manifest %>
{
  "background_color": "#f6f2eb",
  "description": "<%= t("meta.description.default") %>",
  "display": "standalone",
  "icons": [
    {
      "purpose": "any maskable",
      "sizes": "192x192",
      "src": "/icon-192.png",
      "type": "image/png"
    },
    {
      "purpose": "any maskable",
      "sizes": "512x512",
      "src": "/icon-512.png",
      "type": "image/png"
    }
  ],
  "name": "<%= Rails.env.development? ? "Mewst (Dev)" : "Mewst" %>",
  "scope": "/",
  "share_target": {
    "action": "/new",
    "method": "GET",
    "params": {
      "url": "content"
    }
  },
  "short_name": "Mewst",
  "shortcuts": [
    {
      "name": "<%= t("meta.title.posts.new") %>",
      "url": "/new"
    },
    {
      "name": "<%= t("meta.title.notifications.index") %>",
      "url": "/notifications"
    }
  ],
  "start_url": "/home",
  "theme_color": "#f6f2eb"
}
