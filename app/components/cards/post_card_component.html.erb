<div class="border-0 card rounded-4 u-flat">
  <div class="card-body">
    <div class="align-items-start gap-3 hstack">
      <%= link_to profile_path(post.profile.atname) do %>
        <%= render Images::AvatarImageComponent.new(profile: post.profile, width: 40) %>
      <% end %>

      <div class="flex-fill">
        <%= render Cards::PostCard::HeaderComponent.new(post:) %>

        <div class="mt-3">
          <%= render Cards::PostCard::BodyComponent.new(post:) %>
        </div>

        <div class="mt-3">
          <%= render Cards::PostCard::FooterComponent.new(post:) %>
        </div>
      </div>
    </div>
  </div>
</div>
