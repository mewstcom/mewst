<% if signed_in? %>
  <turbo-frame id="posts-<%= post.id %>-stamp">
    <% if stamp_checker.stamped?(post:) %>
      <%= button_to post_stamp_path(post.id), {
        class: "bg-orange-100 btn btn-circle btn-sm hover:bg-orange-200 text-orange-400",
        method: :delete
      } do %>
        <%= render Icons::StampedIconComponent.new %>
      <% end %>
    <% else %>
      <%= button_to post_stamp_path(post.id), {
        class: "bg-gray-100 btn btn-circle btn-sm hover:bg-gray-200 text-gray-400",
      } do %>
        <%= render Icons::UnstampedIconComponent.new %>
      <% end %>
    <% end %>
  </turbo-frame>
<% else %>
  <span
    class="d-inline-block"
    data-bs-title="<%= t("messages.components.stamp_button.sign_in_required") %>"
    data-bs-toggle="tooltip"
    tabindex="0"
  >
    <button
      class="bg-gray-100 btn btn-circle btn-sm hover:bg-gray-200 text-gray-4"
      disabled
      type="button"
    >
      <%= render Icons::UnstampedIconComponent.new %>
    </button>
  </span>
<% end %>
