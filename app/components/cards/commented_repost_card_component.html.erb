<div class="c-content-card border-0 card rounded-4">
  <div class="card-body">
    <div class="gx-3 row">
      <div class="col-auto">
        <%= link_to profile_path(profile.atname) do %>
          <%= render Images::AvatarImageComponent.new(profile:, width: 40) %>
        <% end %>
      </div>

      <div class="col">
        <%= render Cards::PostCard::HeaderComponent.new(post:) %>

        <div class="mt-3">
          <%= render Cards::PostCard::BodyComponent.new(post:) %>
        </div>

        <div class="c-content-card card mt-3 rounded-4">
          <div class="card-body">
            <div class="gx-2 row">
              <div class="col-auto">
                <%= link_to profile_path(target_profile.atname) do %>
                  <%= render Images::AvatarImageComponent.new(profile: target_profile, width: 30) %>
                <% end %>
              </div>

              <div class="col">
                <%= link_to profile_path(target_profile.atname) do %>
                  <span class="fw-bold">
                    <%= target_profile.name %>
                  </span>

                  <span class="text-muted">
                    @<%= target_profile.atname %>
                  </span>
                <% end %>

                <div>
                  <%= link_to mst_time_ago_in_words(target_post.published_at), post_path(target_profile.atname, target_post.id), class: "small text-muted" %>
                </div>

                <div class="mt-3">
                  <%= render Cards::PostCard::BodyComponent.new(post: target_post) %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-3">
          <%= render Cards::PostCard::FooterComponent.new(post:) %>
        </div>
      </div>
    </div>
  </div>
</div>
