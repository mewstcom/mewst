<div class="gx-3 row">
  <div class="col-auto">
    <%= link_to profile_path(profile.atname) do %>
      <%= render Images::AvatarImageComponent.new(profile:, width: 40) %>
    <% end %>
  </div>

  <div class="col">
    <%= render Cards::PostCard::HeaderComponent.new(post:) %>

    <div class="mt-3">
      <%= render Cards::PostCard::BodyComponent.new(post:) %>
    </div>

    <div class="c-content-card card mt-3 rounded-4">
      <div class="card-body pb-0">
        <div class="gx-2 row">
          <div class="col-auto">
            <%= link_to profile_path(target_profile.atname) do %>
              <%= render Images::AvatarImageComponent.new(profile: target_profile, width: 30) %>
            <% end %>
          </div>

          <div class="col">
            <%= render Cards::PostCard::HeaderComponent.new(post: target_post) %>

            <div class="mt-3">
              <%= render Cards::PostCard::BodyComponent.new(post: target_post) %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-3">
      <%= render Cards::PostCard::FooterComponent.new(post:) %>
    </div>
  </div>
</div>
