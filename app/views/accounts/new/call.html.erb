<%= form_with model: @form, url: accounts_path do |f| %>
  <%= render Cards::FormErrorsCardComponent.new(errors: f.object.errors) %>

  <div>
    <%= f.label :email %>
    <%= f.hidden_field :email %>
    <%= @form.email %>
  </div>

  <div>
    <%= f.label :idname %>
    <%= f.text_field :idname %>
  </div>

  <%= f.submit %>
<% end %>
