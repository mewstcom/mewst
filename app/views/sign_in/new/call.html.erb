<% title = t("meta.title.sign_in.new") %>
<% set_meta_tags(title:) %>

<%= render Cards::FlashCardComponent.new(flash:) %>

<%= render(Containers::NarrowContainerComponent.new) do %>
  <%= form_with model: @account, url: sign_in_path do |f| %>
    <%= render Cards::FormErrorsCardComponent.new(errors: f.object.errors) %>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <div class="row">
        <div class="col">
          <%= f.label :password, class: "form-label" %>
        </div>

        <div class="col-auto">
          <%= link_to t("meta.title.password_resets.new"), password_reset_path, class: "form-text" %>
        </div>
      </div>

      <%= f.password_field :password, class: "form-control" %>
    </div>

    <%= f.button class: "btn btn-primary", type: :submit do %>
      <%= t("verbs.sign_in") %>
    <% end %>
  <% end %>
<% end %>
