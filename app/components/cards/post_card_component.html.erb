<%= render Mewst::UI::Card.new do %>
  <%= render Mewst::UI::Card::Body.new do %>
    <%= render EntryHeaders::BasicEntryHeaderComponent.new(
      profile: post.profile_record,
      time: post.published_at,
      detail_path: profile_post_path(post.profile_record.atname, post.id),
      follow_checker:
    ) %>

    <%= render Cards::PostCard::BodyComponent.new(post:) %>

    <% if post.link_record %>
      <%= link_to post.link_record.canonical_url, rel: "nofollow noopener", target: "_blank" do %>
        <%= render Cards::LinkCardComponent.new(link: post.link_record) %>
      <% end %>
    <% end %>

    <div class="mt-4">
      <%= render Cards::PostCard::FooterComponent.new(post:, stamp_checker:) %>
    </div>
  <% end %>
<% end %>
