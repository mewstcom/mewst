<%= render Navbars::NavbarComponent.new %>

<div class="container py-3 u-flat u-narrow">
  <%= render Forms::PostFormComponent.new %>

  <div
    class="gap-3 js-timeline mt-4 vstack"
    data-controller="timeline"
  >
    <% @posts.each do |post| %>
      <%= render Cards::PostCardComponent.new(post:) %>
    <% end %>
  </div>

  <div class="mt-3 text-center">
    <div class="btn-group">
      <% if @page_info.has_previous_page %>
        <%= link_to t("messages.pagination.prev"), home_path(before: @page_info.start_cursor), class: "btn btn-primary" %>
      <% else %>
        <button class="btn btn-primary" disabled type="button">
          <%= t("messages.pagination.prev") %>
        </button>
      <% end %>

      <% if @page_info.has_next_page %>
        <%= link_to t("messages.pagination.next"), home_path(after: @page_info.end_cursor), class: "btn btn-primary" %>
      <% else %>
        <button class="btn btn-primary" disabled type="button">
          <%= t("messages.pagination.next") %>
        </button>
      <% end %>
    </div>
  </div>
</div>
