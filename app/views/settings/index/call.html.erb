<% title = t("meta.title.settings.index") %>
<% set_meta_tags(title:) %>

<%= render ::Layouts::BasicLayoutComponent.new do %>
  <div class="container mt-3 u-narrow">
    <h1 class="fw-bold">
      <%= title %>
    </h1>
  </div>

  <div class="container u-flat u-narrow">
    <hr class="mb-0">
  </div>

  <div class="container mt-3 u-flat u-narrow">
    <div class="c-content-card border-0 card rounded-4 u-flat">
      <div class="card-body">
        <div class="list-group rounded-4">
          <%= link_to settings_profile_path, class: "align-items-center d-flex justify-content-between list-group-item list-group-item-action" do %>
            <%= t("nouns.profile") %>

            <i class="bi bi-chevron-right"></i>
          <% end %>

          <%= link_to settings_user_path, class: "align-items-center d-flex justify-content-between list-group-item list-group-item-action" do %>
            <%= t("nouns.user") %>

            <i class="bi bi-chevron-right"></i>
          <% end %>
        </div>

        <div class="mt-3 text-center">
          <%= link_to t("nouns.sign_out"), sign_out_path, class: "btn btn-link text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
