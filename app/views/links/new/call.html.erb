<turbo-frame id="link-form">
  <%= form_with model: @form, url: link_list_path do |f| %>
    <%= render Cards::FormErrorsCardComponent.new(errors: f.object.errors) %>

    <%= f.hidden_field :target_url %>

    <%= f.button(
      class: "btn btn-ghost btn-xs no-animation rounded-full textarea-bordered",
      type: :submit
    ) do %>
      <%= t("verbs.add_link_card", host_and_path: @host_and_path) %>
    <% end %>
  <% end %>
</turbo-frame>
